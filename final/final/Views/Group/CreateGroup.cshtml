@{
    ViewBag.Title = "CreateGroup";
}

<h2>יצירת קבוצה</h2>


<br /><br />

<div style="float:right; direction:rtl;">
    @using (Html.BeginForm("OpenGroup", "Group",FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            קטגוריה
            <div class="col-md-9">
                <select name="CategoryID" style="width: 200px;">
                    <option value="0">ללא</option>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.ObjectId">@category.ObjectId</option>
                    }
                </select>
            </div>

        </div>

        <div class="form-group">
            תת-קטגוריה
            <div class="col-md-9">
                <select name="SubCategoryID" style="width: 200px;">
                    <option value="0">ללא</option>
                    @foreach (var subcategory in ViewBag.SubCategories)
                    {
                        <option value="@subcategory.ObjectId">@subcategory.ObjectId</option>
                    }
                </select>
            </div>

        </div>


        <div class="form-group">
            קטגוריה
            <div class="col-md-9">
                <select name="ProductID" style="width: 200px;">
                    <option value="0">ללא</option>
                    @foreach (var product in ViewBag.Products)
                    {
                        <option value="@product.ObjectId">@product.ObjectId</option>
                    }
                </select>
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="יצירה" />
            </div>
        </div>
    }






</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



